<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.nodepp.smartnode.activity.ColorControlActivity">

    <LinearLayout
        android:id="@+id/ll_light_on_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:gravity="center"
                android:background="@drawable/shadow_bg"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@mipmap/circle_green"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_light_on"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_light_circle_full"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@mipmap/ic_light_on" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:text="暗"
                android:textColor="#666666"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="230dp"
                android:background="@drawable/shadow_seekbar"
                android:layout_height="wrap_content">
                <com.nodepp.smartnode.view.OpacityBar
                    android:id="@+id/light_dark_bar"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="亮"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:text="素"
                android:textColor="#666666"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="230dp"
                android:background="@drawable/shadow_seekbar"
                android:layout_height="wrap_content">
                <com.nodepp.smartnode.view.OpacityBar
                    android:id="@+id/color_bar"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="艳"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:text="慢"
                android:textColor="#666666"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="230dp"
                android:background="@drawable/shadow_seekbar"
                android:layout_height="wrap_content">
                <com.nodepp.smartnode.view.OpacityBar
                    android:id="@+id/speed_bar"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="快"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_finish"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_close" />
    </RelativeLayout>
</RelativeLayout>
