<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
           >

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@mipmap/circle_green" />
            </LinearLayout>

            <com.nodepp.smartnode.view.ColorPicker
                android:id="@+id/picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_light_on" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#f9f9f9"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:background="@drawable/shape_color_circle_full">
                    <CheckBox
                        android:id="@+id/cb_one"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_color_circle"
                        android:button="@null"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/shape_color_circle_full">

                    <CheckBox
                        android:id="@+id/cb_two"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_color_circle"
                        android:button="@null"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:background="@drawable/shape_color_circle_full">

                    <CheckBox
                        android:id="@+id/cb_three"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/selector_color_circle"
                        android:button="@null"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_four"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:background="@drawable/shape_color_circle_full">

                        <CheckBox
                            android:id="@+id/cb_four"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/selector_color_circle"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_five"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@drawable/shape_color_circle_full">

                        <CheckBox
                            android:id="@+id/cb_five"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/selector_color_circle"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_six"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@drawable/shape_color_circle_full">

                        <CheckBox
                            android:id="@+id/cb_six"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/selector_color_circle"
                            android:button="@null"
                            android:clickable="false"
                            android:focusable="false" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_delect"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/ic_delect_color" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_finish"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_close" />
    </RelativeLayout>
</RelativeLayout>