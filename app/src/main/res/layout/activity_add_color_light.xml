<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.nodepp.smartnode.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMessage="@string/add_color_light"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         android:layout_marginTop="65dp"
         android:layout_gravity="center_horizontal"
         android:textColor="@color/text_color1"
         android:text="请确认智能设备已经接入电源"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color2"
        android:text="确认灯在红绿蓝交替闪烁状态"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color2"
        android:text="点击下一步"/>
<!--    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="88dp"
        android:layout_height="148dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/light"
        android:layout_gravity="center"
        />-->
    <RelativeLayout
        android:id="@+id/ll_light_off"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_light_change_circle"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_how_to"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@drawable/selector_how_to_text_color"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_gravity="center_horizontal"
          android:gravity="center_vertical"
          android:layout_height="50dp">
          <Button
              android:id="@+id/btn_cancle"
              android:layout_width="124dp"
              android:layout_height="40dp"
              android:textSize="16sp"
              android:textColor="@android:color/transparent"
              android:text="取消"
              android:background="@drawable/btn_cancle_selector"/>
          <Button
              android:id="@+id/btn_ok"
              android:layout_width="124dp"
              android:layout_height="40dp"
              android:textColor="@android:color/transparent"
              android:textSize="16sp"
              android:text="下一步"
              android:background="@drawable/btn_next_selector"/>
      </LinearLayout>
</LinearLayout>
