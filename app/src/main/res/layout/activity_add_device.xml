<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.nodepp.smartnode.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMessage="@string/add_device"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:layout_marginTop="65dp"
         android:layout_gravity="center_horizontal"
         android:textColor="#333333"
         android:fontFamily="serif"

         android:text="请确认智能设备已经接入电源"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color2"
        android:text="先初始化设备，点击下一步"/>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="14sp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textColor="@color/text_color2"-->
        <!--android:text="确认灯在闪烁状态"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color2"
        android:text="（请先操作设备，让设备进入配置模式）"/>
    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/add_pulb2"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_how_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:textColor="@drawable/selector_how_to_text_color"
        android:textSize="16sp" />
      <LinearLayout
          android:layout_marginTop="5dp"
          android:gravity="center"
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          >
          <Button
              android:id="@+id/btn_ok"
              android:layout_width="300dp"
              android:layout_height="50dp"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:text="下一步"
              android:background="@drawable/btn_ok_selector"/>

          <Button
              android:id="@+id/btn_cancle"
              android:layout_width="300dp"
              android:layout_height="50dp"
              android:text="取消"
              android:layout_marginTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:textColor="@color/bathSelected"
              android:background="@drawable/btn_cancle_selector"
              android:textSize="16sp" />
      </LinearLayout>
</LinearLayout>
